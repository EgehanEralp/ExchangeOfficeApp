<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1">

    <TextView
        android:id="@+id/ad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="22dp"
        android:text="Kullanıcı Adı :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/adGiris1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ad1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/sifre1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sifreGiris1"
        android:layout_alignStart="@+id/ad1"
        android:text="Sifre :" />

    <EditText
        android:id="@+id/sifreGiris1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/adGiris1"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:password="true" />

    <Button
        android:id="@+id/buttonKayıtOl"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="119dp"
        android:text="KAYIT OL" />

    <TextView
        android:id="@+id/ad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adGiris2"
        android:layout_alignStart="@+id/ad1"
        android:text="Kullanıcı Adı :" />

    <TextView
        android:id="@+id/sifre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sifre1"
        android:layout_marginBottom="189dp"
        android:text="Sifre :" />

    <EditText
        android:id="@+id/adGiris2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/adGiris1"
        android:layout_marginBottom="259dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/sifreGiris2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sifre2"
        android:layout_alignStart="@+id/adGiris1"
        android:ems="10"
        android:inputType="textPersonName"
        android:password="true" />

    <Button
        android:id="@+id/buttonGirisYap"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:text="GİRİŞ YAP" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonKayıtOl"
        android:text="----------------------------------------"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

</RelativeLayout>