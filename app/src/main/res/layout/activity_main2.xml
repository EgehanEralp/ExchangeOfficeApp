<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bakiye"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="21sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tlText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1000 TL"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/dolarText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50 $"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/euroText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="60 €"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="228dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="number"
        android:text="" />

    <RadioGroup
        android:id="@+id/bgrup"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/dolarrb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dolar" />

        <RadioButton
            android:id="@+id/eurorb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Euro" />
    </RadioGroup>

    <Button
        android:id="@+id/satinAlButton"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SATIN AL"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bozdurButton"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="BOZDUR"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textInfoD"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textInfoE"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonSirala"
        style="?attr/actionBarPopupTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="false"
        android:password="false"
        android:text="ÜYELERİN BAKİYELERİNİ GÖSTER"
        android:textColor="?attr/colorPrimaryDark"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="19sp"
        android:textStyle="bold" />

</LinearLayout>